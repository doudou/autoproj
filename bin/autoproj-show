#! /usr/bin/env ruby

require 'autoproj'
require 'autoproj/cli/show'
require 'autoproj/cmdline'

user_selection = ARGV.map do |arg|
    if File.directory?(arg)
        File.expand_path(arg)
    else arg
    end
end

cli = Autoproj::CLI::Show.new
packages, options = cli.parse_options(user_selection)
Autoproj::CmdLine.report(silent: true) do
    cli.run(packages, options)
end

